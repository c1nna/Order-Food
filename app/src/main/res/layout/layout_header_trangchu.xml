<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroundheader1">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logoNavi"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/logodangnhap" />

    <TextView
        android:id="@+id/txtTenNV_navi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoNavi"
        android:layout_alignStart="@id/logoNavi"
        android:layout_marginTop="40dp"
        android:text="Ten Nhan Vien"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000"/>
</RelativeLayout>